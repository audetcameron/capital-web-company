---
layout: layouts/base.njk
---
<time>{{ date | readableDate }}</time>

<article class="prose lg:prose prose-img:rounded-xl prose-headings:underline prose-a:text-blue-600 prose-ul:p4">

<!-- <h1 class="text-3xl mb-8">{{title}}</h1> -->

{{ content | safe }}</article>

<script type="application/ld+json">
  {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Article",
    "description": "Schema for an article or blog post",
    "type": "object",
    "properties": {
      "headline": {
        "type": "string",
        "description": "The Ultimate Technical SEO Checklist for 2025"
      },
      "datePublished": {
        "type": "string",
        "format": "date-time",
        "description": "2025-27-05"
      },
      "author": {
        "type": "object",
        "description": "The author of the article",
        "properties": {
          "name": {
            "type": "string",
            "description": "Capital Web Company"
          },
          "url": {
            "type": "string",
            "format": "url",
            "description": "https//capitalwebcomapny.com"
          }
        },
        "required": [
          "name"
        ]
      },
      "image": {
        "type": "array",
        "items": {
          "type": "string",
          "format": "url"
        },
        "description": "Array of image URLs associated with the article"
      },
      "articleBody": {
        "type": "string",
        "description": "{{content | safe }}"
      },
      "description": {
        "type": "string",
        "description": "{{ description }}}"
      },
      "keywords": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "{{ keywords }}}"
      }
    },
    "required": [
      "headline",
      "datePublished",
      "author",
      "articleBody"
    ]
  }
</script>